<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Register
    </div>
    <form action="/register" method="POST" class="ui form">
        <div class="field">
            <label>First Name</label>
            <input required type="text" name="first_name" placeholder="first name">
        </div>
        <div class="field">
            <label>Last Name</label>
            <input required type="text" name="last_name" placeholder="last name">
        </div>
        <div class="field">
            <label>Email</label>
            <input required type="email" name="email" placeholder="enter your email" >    
        </div>
        
        <div class="field">
            <label> Password</label>
            <input type="password" minlength="8" maxlength="15" required name="password" placeholder="choose a password"></textarea>
        </div>
        
        <div class="field">
            <button class="ui button" type="submit">Submit</button>      
        </div>
       
    </form>
</div>

<%- include("partials/footer") %>

